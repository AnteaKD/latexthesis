  keywords =    {Animals; Cognitive Science; Fixation, Ocular, physiology; Humans; Ocular Motility Disorders, physiopathology; Saccades, physiology; Vision, Ocular, physiology; Visual Perception, physiology},
  language =    {eng},
  medline-pst = {ppublish},
