@Article{Martinez-Conde2013,
  author =      {Martinez-Conde, Susana and Otero-Millan, Jorge and Macknik, Stephen L.},
  title =       {The impact of microsaccades on vision: towards a unified theory of saccadic function.},
  journal =     {Nature Reviews Neuroscience},
  year =        {2013},
  volume =      {14},
  number =      {2},
  pages =       {83--96},
  month =       {Feb},
  abstract =    {When we attempt to fix our gaze, our eyes nevertheless produce so-called
	'fixational eye movements', which include microsaccades, drift and
	tremor. Fixational eye movements thwart neural adaptation to unchanging
	stimuli and thus prevent and reverse perceptual fading during fixation.
	Over the past 10 years, microsaccade research has become one of the
	most active fields in visual, oculomotor and even cognitive neuroscience.
	The similarities and differences between microsaccades and saccades
	have been a most intriguing area of study, and the results of this
	research are leading us towards a unified theory of saccadic and
	microsaccadic function.},
